<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/bg_auth_back"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/ic_back_second"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="@color/white" />


        <com.dtech.darussalam.utilities.helper.TypeFaceTextView
            android:id="@+id/tvLogin"
            android:text="@string/enter_otp"
            android:theme="@style/NunitoBold"
            android:textSize="@dimen/_24ssp"
            app:layout_constraintStart_toStartOf="@+id/ivBack"
            app:layout_constraintBottom_toTopOf="@+id/tvVerifyYourEmail"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.dtech.darussalam.utilities.helper.TypeFaceTextView
            android:id="@+id/tvVerifyYourEmail"
            android:text="@string/please_enter_otp_sent_on_your_mail"
            android:layout_marginTop="@dimen/_10sdp"
            android:theme="@style/NunitoBold"
            android:textSize="@dimen/_12ssp"
            android:layout_marginBottom="@dimen/_25sdp"
            app:layout_constraintStart_toStartOf="@+id/ivBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/clVerifyOtp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>




        <LinearLayout
            android:id="@+id/clVerifyOtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layoutDirection="ltr"
            android:layout_marginRight="@dimen/_35sdp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_margin="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_3sdp">

                <com.dtech.darussalam.utilities.helper.TypeFaceEditText
                    android:id="@+id/et1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_otp_design"
                    android:gravity="center"
                    style="@style/NunitoBold"
                    android:hint="*"
                    android:textColorHint="@color/hint_text_color"
                    android:textSize="@dimen/_16ssp"
                    android:inputType="number"
                    android:maxLength="1"

                    android:textColor="@color/black" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_margin="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_3sdp">

                <com.dtech.darussalam.utilities.helper.TypeFaceEditText
                    android:id="@+id/et2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_otp_design"
                    android:gravity="center"
                    android:inputType="number"
                    android:hint="*"
                    android:textColorHint="@color/hint_text_color"
                    android:maxLength="1"
                    android:textColor="@color/black"
                    style="@style/NunitoBold"
                    android:textSize="@dimen/_16ssp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_margin="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_3sdp">

                <com.dtech.darussalam.utilities.helper.TypeFaceEditText
                    android:id="@+id/et3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_otp_design"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:hint="*"
                    android:textColorHint="@color/hint_text_color"
                    android:textColor="@color/black"
                    style="@style/NunitoBold"
                    android:textSize="@dimen/_16ssp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_margin="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_3sdp">

                <com.dtech.darussalam.utilities.helper.TypeFaceEditText
                    android:id="@+id/et4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_otp_design"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:hint="*"
                    android:textColorHint="@color/hint_text_color"
                    android:textColor="@color/black"
                    style="@style/NunitoBold"
                    android:textSize="@dimen/_16ssp"/>

            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <com.dtech.darussalam.utilities.helper.TypeFaceTextView
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/NunitoBold"
            android:id="@+id/tvTimer"
            android:textSize="@dimen/_16ssp"
            android:text="00:59"
            app:layout_constraintTop_toBottomOf="@+id/clVerifyOtp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/tvTimer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <com.dtech.darussalam.utilities.helper.TypeFaceTextView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/NunitoRegular"
                android:textSize="@dimen/_12ssp"
                android:text="@string/otp_not_received"
                app:layout_constraintTop_toBottomOf="@+id/clVerifyOtp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.dtech.darussalam.utilities.helper.TypeFaceTextView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/NunitoBold"
                android:visibility="gone"
                android:id="@+id/tvResendCode"
                android:layout_marginStart="@dimen/_5sdp"
                android:textSize="@dimen/_12ssp"
                android:text="@string/resend"
                app:layout_constraintTop_toBottomOf="@+id/clVerifyOtp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <com.dtech.darussalam.utilities.helper.TypeFaceButton
            android:id="@+id/btnSubmit"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/_60sdp"
            android:background="@drawable/bg_button_design"
            app:layout_constraintTop_toBottomOf="@+id/tvTimer"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/submit"
            android:textSize="@dimen/_14ssp"
            style="@style/NunitoBold"
            android:layout_height="@dimen/_40sdp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>